{
  "packages": ["packages/*"],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "registry": "https://registry.npmjs.org/",
  "loglevel": "success",
  "command": {
    "publish": {
      "allowBranch": ["main", "dev", "ci/test-release"],
      "conventionalCommits": true,
      "message": "chore(release): publish [skip ci]"
    }
  },
  "ignoreChanges": [
    "CHANGELOG.md",
    "**/__fixtures__/**",
    "**/*.snap",
    "**/*.test.*",
    "**/*.stories.*",
    "**/*.md"
  ]
}
