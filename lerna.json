{
  "npmClient": "pnpm",
  "version": "independent",
  "registry": "https://registry.npmjs.org/",
  "loglevel": "success",
  "command": {
    "publish": {
      "allowBranch": ["main", "dev"],
      "conventionalCommits": true,
      "message": "chore(release): publish [skip ci]"
    },
    "version": {
      "conventionalCommits": true,
      "changelogPreset": "./release-rules.js"
    }
  },
  "ignoreChanges": [
    "CHANGELOG.md",
    "**/__fixtures__/**",
    "**/*.snap",
    "**/*.test.*",
    "**/*.stories.*",
    "**/*.md"
  ]
}
