{
  "name": "@vtex/shoreline-theme",
  "version": "0.4.0",
  "description": "Shoreline theme package",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "repository": "vtex/shoreline",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "pnpm run build-ts && pnpm run build-css",
    "build-ts": "tsup",
    "build-css": "postcss --config postcss.config.mjs src/*.css --base src --dir dist"
  },
  "devDependencies": {
    "@types/cssesc": "3.0.0",
    "@types/fs-extra": "11.0.1",
    "@types/node": "20.4.5",
    "postcss-cli": "10.1.0"
  },
  "dependencies": {
    "@vtex/shoreline-utils": "workspace:*",
    "c12": "1.5.1",
    "cssesc": "3.0.0",
    "fs-extra": "11.1.1",
    "postcss": "8.4.27",
    "postcss-preset-env": "9.3.0",
    "prettier": "3.0.0"
  }
}
